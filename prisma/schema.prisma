generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Document {
  id              String            @id
  title           String
  content         String
  description     String?
  isPublic        Boolean           @default(false)
  password        String?
  version         Int               @default(1)
  status          String            @default("draft")
  tags            String[]          @default([])
  userId          String
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  workspaceId     String?
  User            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  Workspace       Workspace?        @relation(fields: [workspaceId], references: [id])
  DocumentVersion DocumentVersion[]

  @@index([createdAt])
  @@index([isPublic])
  @@index([status])
  @@index([userId])
  @@index([workspaceId])
}

model DocumentVersion {
  id          String   @id
  documentId  String
  version     Int
  title       String
  content     String
  description String?
  changeLog   String?
  createdAt   DateTime @default(now())
  Document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)

  @@unique([documentId, version])
  @@index([createdAt])
  @@index([documentId])
}

model MemberCustomPolicy {
  id               String          @id
  memberId         String
  name             String
  description      String?
  statements       Json
  resourcePatterns String[]        @default([])
  actions          String[]        @default([])
  conditions       Json?
  isActive         Boolean         @default(true)
  createdAt        DateTime        @default(now())
  updatedAt        DateTime
  WorkspaceMember  WorkspaceMember @relation(fields: [memberId], references: [id], onDelete: Cascade)

  @@index([isActive])
  @@index([memberId])
}

model SAMLCode {
  id          String   @id
  code        String   @unique
  description String
  metadata    Json?
  isActive    Boolean  @default(true)
  createdById String
  teamId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  User        User     @relation(fields: [createdById], references: [id])
  Team        Team?    @relation(fields: [teamId], references: [id])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Team {
  id          String     @id
  name        String
  description String?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  SAMLCode    SAMLCode[]
  TeamUser    TeamUser[]
}

model TeamUser {
  id        String   @id
  teamId    String
  userId    String
  role      String   @default("MEMBER")
  createdAt DateTime @default(now())
  updatedAt DateTime
  Team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
}

model User {
  id                  String                @id
  name                String?
  email               String?               @unique
  emailVerified       DateTime?
  image               String?
  role                String                @default("MEMBER")
  createdAt           DateTime              @default(now())
  updatedAt           DateTime
  bio                 String?
  location            String?
  website             String?
  stripeCustomerId    String?               @unique
  Account             Account[]
  Document            Document[]
  SAMLCode            SAMLCode[]
  Session             Session[]
  TeamUser            TeamUser[]
  UserPreferences     UserPreferences?
  Workspace           Workspace[]
  WorkspaceInvitation WorkspaceInvitation[]
  WorkspaceMember     WorkspaceMember[]
  Subscription        Subscription?
  UsageTracking       UsageTracking[]
  Invoice             Invoice[]
  PaymentMethod       PaymentMethod[]
}

model UserPreferences {
  id                 String   @id
  userId             String   @unique
  theme              String   @default("system")
  language           String   @default("en")
  emailNotifications Boolean  @default(true)
  pushNotifications  Boolean  @default(false)
  weeklyDigest       Boolean  @default(true)
  editorTheme        String   @default("vs-dark")
  fontSize           Int      @default(14)
  tabSize            Int      @default(2)
  wordWrap           Boolean  @default(true)
  profileVisibility  String   @default("PUBLIC")
  showEmail          Boolean  @default(false)
  showActivity       Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime
  User               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Workspace {
  id                  String                @id
  name                String
  slug                String                @unique
  description         String?
  avatar              String?
  visibility          String                @default("PRIVATE")
  createdById         String
  createdAt           DateTime              @default(now())
  updatedAt           DateTime
  Document            Document[]
  User                User                  @relation(fields: [createdById], references: [id], onDelete: Cascade)
  WorkspaceInvitation WorkspaceInvitation[]
  WorkspaceMember     WorkspaceMember[]
  WorkspacePolicy     WorkspacePolicy[]

  @@index([createdById])
  @@index([slug])
  @@index([visibility])
}

model WorkspaceInvitation {
  id          String    @id
  workspaceId String
  email       String
  role        String    @default("MEMBER")
  token       String    @unique
  invitedById String
  status      String    @default("PENDING")
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime
  User        User      @relation(fields: [invitedById], references: [id], onDelete: Cascade)
  Workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([email])
  @@index([status])
  @@index([token])
  @@index([workspaceId])
}

model WorkspaceMember {
  id                 String               @id
  workspaceId        String
  userId             String
  role               String               @default("MEMBER")
  permissions        Json?
  joinedAt           DateTime             @default(now())
  updatedAt          DateTime
  attachedPolicies   String[]             @default([])
  MemberCustomPolicy MemberCustomPolicy[]
  User               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  Workspace          Workspace            @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([role])
  @@index([userId])
  @@index([workspaceId])
}

model WorkspacePolicy {
  id                  String    @id
  workspaceId         String
  name                String
  description         String?
  canCreateDocuments  Boolean   @default(true)
  canEditDocuments    Boolean   @default(true)
  canDeleteDocuments  Boolean   @default(false)
  canPublishDocuments Boolean   @default(false)
  canInviteMembers    Boolean   @default(false)
  canRemoveMembers    Boolean   @default(false)
  canManageSettings   Boolean   @default(false)
  requireApproval     Boolean   @default(false)
  allowedDomains      String[]  @default([])
  blockedDomains      String[]  @default([])
  appliesTo           String[]  @default(["MEMBER"])
  isActive            Boolean   @default(true)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime
  isManaged           Boolean   @default(false)
  statements          Json      @default("[]")
  type                String    @default("MANAGED")
  Workspace           Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([isActive])
  @@index([type])
  @@index([workspaceId])
}

// Subscription Plans
model Plan {
  id                    String         @id @default(cuid())
  name                  String         @unique // FREE, PRO, TEAM, ENTERPRISE
  displayName           String
  description           String?
  price                 Int            @default(0) // in cents
  currency              String         @default("usd")
  interval              String         @default("month") // month, year
  stripePriceId         String?        @unique
  stripeProductId       String?        @unique
  
  // Feature Limits
  maxDocuments          Int            @default(3)
  maxWorkspaces         Int            @default(1)
  maxTeamMembers        Int            @default(2)
  maxVersionHistory     Int            @default(7) // days
  shareLinkExpiry       Int            @default(7) // days
  
  // Features
  customBranding        Boolean        @default(false)
  exportToPostman       Boolean        @default(false)
  advancedPermissions   Boolean        @default(false)
  ssoIntegration        Boolean        @default(false)
  apiAccess             Boolean        @default(false)
  prioritySupport       Boolean        @default(false)
  dedicatedSupport      Boolean        @default(false)
  onPremiseDeployment   Boolean        @default(false)
  advancedAnalytics     Boolean        @default(false)
  customIntegrations    Boolean        @default(false)
  removeWatermark       Boolean        @default(false)
  
  isActive              Boolean        @default(true)
  sortOrder             Int            @default(0)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
  
  Subscription          Subscription[]
  
  @@index([name])
  @@index([isActive])
}

// User Subscriptions
model Subscription {
  id                    String    @id @default(cuid())
  userId                String    @unique
  planId                String
  
  // Stripe Integration
  stripeSubscriptionId  String?   @unique
  stripeCustomerId      String?
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?
  
  status                String    @default("active") // active, canceled, past_due, trialing, incomplete
  cancelAtPeriodEnd     Boolean   @default(false)
  canceledAt            DateTime?
  
  // Trial
  trialStart            DateTime?
  trialEnd              DateTime?
  
  // Billing
  currentPeriodStart    DateTime  @default(now())
  currentPeriodEnd      DateTime
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  User                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  Plan                  Plan      @relation(fields: [planId], references: [id])
  
  @@index([userId])
  @@index([planId])
  @@index([status])
  @@index([stripeSubscriptionId])
}

// Usage Tracking for Limits
model UsageTracking {
  id                String   @id @default(cuid())
  userId            String
  
  // Current Period Usage
  documentsCount    Int      @default(0)
  workspacesCount   Int      @default(0)
  teamMembersCount  Int      @default(0)
  apiCallsCount     Int      @default(0)
  storageUsed       Int      @default(0) // in MB
  
  // Period
  periodStart       DateTime @default(now())
  periodEnd         DateTime
  
  // Metadata
  lastResetAt       DateTime @default(now())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  User              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, periodStart])
  @@index([userId])
  @@index([periodStart])
}

// Invoices
model Invoice {
  id                  String   @id @default(cuid())
  userId              String
  
  // Stripe Integration
  stripeInvoiceId     String   @unique
  stripePaymentIntentId String?
  
  // Invoice Details
  number              String?  @unique
  amount              Int      // in cents
  currency            String   @default("usd")
  status              String   // draft, open, paid, void, uncollectible
  
  // Dates
  invoiceDate         DateTime @default(now())
  dueDate             DateTime?
  paidAt              DateTime?
  
  // PDF
  invoicePdf          String?
  hostedInvoiceUrl    String?
  
  // Metadata
  description         String?
  metadata            Json?
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  User                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
  @@index([stripeInvoiceId])
}

// Payment Methods
model PaymentMethod {
  id                  String   @id @default(cuid())
  userId              String
  
  // Stripe Integration
  stripePaymentMethodId String @unique
  
  // Card Details
  type                String   // card, bank_account
  brand               String?  // visa, mastercard, etc.
  last4               String?
  expiryMonth         Int?
  expiryYear          Int?
  
  // Status
  isDefault           Boolean  @default(false)
  
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  User                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([stripePaymentMethodId])
}

// Webhook Events Log
model WebhookEvent {
  id                String   @id @default(cuid())
  
  // Stripe Event
  stripeEventId     String   @unique
  type              String   // invoice.paid, customer.subscription.updated, etc.
  
  // Data
  data              Json
  
  // Processing
  processed         Boolean  @default(false)
  processedAt       DateTime?
  error             String?
  
  createdAt         DateTime @default(now())
  
  @@index([type])
  @@index([processed])
  @@index([stripeEventId])
}

// Feature Flags (for gradual rollout)
model FeatureFlag {
  id                String   @id @default(cuid())
  name              String   @unique
  description       String?
  isEnabled         Boolean  @default(false)
  
  // Rollout Strategy
  rolloutPercentage Int      @default(0) // 0-100
  allowedUserIds    String[] @default([])
  allowedPlans      String[] @default([])
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([name])
  @@index([isEnabled])
}
